<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.CocktailDetailsActivity">


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/headerCocktailImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/cocktail"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerCrop"
        android:contentDescription="@string/cocktail_image"
        android:foreground="@drawable/gradient"
        />

    <TextView
        android:id="@+id/cocktailNameTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/headerCocktailImage"
        android:textSize="50sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="@string/cocktail_name"
        />

    <TextView
        android:id="@+id/cocktailInstructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/cocktailNameTitle"
        />

</androidx.constraintlayout.widget.ConstraintLayout>